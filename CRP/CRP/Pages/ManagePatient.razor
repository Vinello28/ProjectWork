@using DataAccessLayer.Models;
@using DataAccessLayer.Services
@using Syncfusion.Blazor.Data;
@using Syncfusion.Blazor.Grids;
@using Syncfusion.Blazor;
@using System.Collections

@inject PatientService patientService

@page "/managepatient"

<h1>ManagePatient</h1>

@if (patients == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <EditForm Model="p" OnSubmit="HandleSubmit">
        <DataAnnotationsValidator />
        <ValidationSummary />
        <div class="form-group">
            <label for="FirstName">First Name</label>
            <InputText id="FirstName" class="form-control" @bind-Value="p.FirstName" />
            <label for="LastName">Last Name</label>
            <InputText id="LastName" class="form-control" @bind-Value="p.LastName" />
            <label for="DateOfBirth">Date Of Birth</label>
            <InputDate id="DateOfBirth" class="form-control" @bind-Value="p.DateOfBirth" />
            <button type="submit" class="btn btn-primary">Submit</button>
            </div>
    </EditForm>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Date Of Birth</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in patients)
            {
                <tr>
                    <td>@item.PatientId</td>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.DateOfBirth</td>
                </tr>
            }
        </tbody>
    </table>
}
   

@code{

    Patient p=new Patient();

    List<Patient> patients;

    protected override async Task OnInitializedAsync()
    {
        patients = await patientService.GetAllPatients();
    }

    public async Task HandleSubmit()
    {
        await patientService.AddPatient(p);
        Refresh();

    }

    private async void Refresh()
    {
        patients = await patientService.GetAllPatients();
        p = new Patient();
    }

}
